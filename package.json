{
  "homepage": "https://snoopcom.github.io/timer",
  "name": "timer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^5.6.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "antd": "^4.3.0",
    "howler": "^2.2.0",
    "node-sass": "^9.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "stylelint": "stylelint src/*.{css,scss,sass}",
    "stylelint:fix": "stylelint src/*.{css,scss,sass} --fix",
    "eslint": "eslint src/*.{js,jsx}",
    "eslint:fix": "eslint  src/*.{js,jsx} --fix",
    "eslint:fix:layout": "eslint  src/*.{js,jsx} --fix --fix-type layout",
    "lint": "npm run eslint & npm run stylelint",
    "lint:fix": "npm run eslint:fix & npm run stylelint:fix",
    "prettier": "prettier src/*.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{css,scss,sass,less,js,jsx,json}": [
      "prettier --write",
      "npm run lint:fix",
      "git add"
    ],
    "src/*.{js,jsx}": [
      "eslint --fix --fix-type layout",
      "git add"
    ],
    "src/*.{css,scss,sass,less}": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "gh-pages": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "prettier": "2.0.5",
    "stylelint": "^13.5.0",
    "stylelint-config-recommended": "^3.0.0"
  }
}
